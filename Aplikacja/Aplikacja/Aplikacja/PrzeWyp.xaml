        <Grid.RowDefinitions>
            <RowDefinition Height="247*"/>
            <RowDefinition Height="120*"/>
        </Grid.RowDefinitions>
        <Button Content="Przejrzyj" HorizontalAlignment="Left" Margin="273,203,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <RichTextBox x:Name="box" HorizontalAlignment="Left" Height="157" Margin="10,41,0,0" VerticalAlignment="Top" Width="338" VerticalScrollBarVisibility="Visible">

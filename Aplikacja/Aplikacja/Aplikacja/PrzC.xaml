<Window x:Class="Aplikacja.PrzC"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Przeglądaj Czasopisma" Height="300" Width="300" MinWidth="300" MinHeight="300">
    <Grid>
        <Image HorizontalAlignment="Left" Height="82" Margin="210,20,0,0" VerticalAlignment="Top" Width="65" Source="Zasoby/czas2.jpg" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="22.83"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Button Content="Przeglądaj" HorizontalAlignment="Left" Margin="127,238,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Label Content="Przeglądaj Czasopisma." HorizontalAlignment="Left" Margin="10,28,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" Foreground="#FFE82121"/>
        <Button Content="Wróć" HorizontalAlignment="Left" Margin="207,238,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <RichTextBox x:Name="box" HorizontalAlignment="Left" Height="138" Margin="10,95,0,0" VerticalAlignment="Top" Width="272" VerticalScrollBarVisibility="Visible">
            <FlowDocument/>
        </RichTextBox>

    </Grid>
</Window>
